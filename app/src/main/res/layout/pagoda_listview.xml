<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/near"
        android:textColor="#3f4db5"
        android:textSize="20dp"
        android:layout_marginLeft="12dp"
        android:text="Here are the shortest list"/>

    <ListView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/near"
        android:id="@+id/androidList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aa"
        android:layout_below="@+id/androidList"
        android:textColor="#5b0909"
        android:id="@+id/total_distace"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aa"
        android:layout_below="@+id/total_distace"
        android:textColor="#5b0909"
        android:id="@+id/ebike_hour"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aa"
        android:layout_below="@+id/ebike_hour"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:textColor="#5b0909"
        android:id="@+id/bicycle_hour"/>

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="#3f4db5"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bicycle_hour"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map"
        android:id="@+id/view_pg"/>


</RelativeLayout>