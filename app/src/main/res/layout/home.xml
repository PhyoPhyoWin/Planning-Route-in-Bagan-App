<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/vi"
                android:typeface="monospace"
                android:gravity="bottom"
                android:text="Travelling in Bagan"
                android:textAlignment="center"
                android:textSize="24sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="5">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/choosepagoda_image"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/location" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/choosePagoda"
                        android:background="#3f4db5"
                        android:textColor="#FFFFFF"
                        android:textSize="9dp"
                        android:text="Find Route(Pagodas)"/>

                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/nearest_rest"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/logo" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/findrest"
                        android:textSize="9dp"
                        android:background="#3f4db5"
                        android:textColor="#FFFFFF"
                        android:text="Find Nearest Restaurant"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="5">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rest_img"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hotel" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Lists"
                        android:textSize="9dp"
                        android:background="#3f4db5"
                        android:textColor="#FFFFFF"
                        android:id="@+id/restList"/>

                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ebike_list"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/eb" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3f4db5"
                        android:id="@+id/pagodaList"
                        android:textSize="9dp"
                        android:textColor="#FFFFFF"
                        android:text="Find Ebike Rental"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>